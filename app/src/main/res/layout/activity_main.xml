<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.MainActivity">

    <Button
        android:id="@+id/ic_note_add_black"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_note_add_black" />

    <Button
        android:id="@+id/ic_history_black"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ic_note_add_black"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_history_black"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true" />

    <com.gacon.julien.moodtracker4.views.swipe.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

    </com.gacon.julien.moodtracker4.views.swipe.VerticalViewPager>

</RelativeLayout>